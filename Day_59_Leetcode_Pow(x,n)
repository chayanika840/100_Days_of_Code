class Solution {
    public double myPow(double x, int n) {
        
        double ans=1.0;
        long nn=n;
        if(nn<0)
            nn=-1 *nn;
        while(nn>0){
            if(nn%2==1){
                ans=ans*n;
            nn=nn-1; }
        }
        else{
            x=x*x;
            nn=nn/2;
        }
        
    }
}
